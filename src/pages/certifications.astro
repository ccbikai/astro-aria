---
import certifications from "../collections/certifications.json";
import Certification from "../components/certification.astro";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="My certifications">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="My certifications"
      description="Here are some of the current certifications I've been working on. I really enjoy creating new certifications and coming up with new ideas. I'm always working on something new, so check back often!"
    />

    <div
      class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2"
    >
      {
        certifications.map((project) => {
          return (
            <Certification
              name={project.name}
              description={project.description}
              image={project.image}
              url={project.url}
            />
          );
        })
      }
    </div>
  </section>
</Layout>
